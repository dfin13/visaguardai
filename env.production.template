# Production Environment Variables Template for VisaGuardAI
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# Django Secret Key - Generate with: python3 -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-generated-secret-key-here-50-characters-minimum

# Django Configuration
DEBUG=False

# PostgreSQL Database Configuration
POSTGRES_DB=visaguard_db
POSTGRES_USER=visaguard_user
POSTGRES_PASSWORD=your-secure-database-password-here
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

DB_NAME=visaguard_db
DB_USER=visaguard_user
DB_PASSWORD=your-secure-database-password-here
DB_HOST=localhost
DB_PORT=5432

# Stripe API Keys (Get from Stripe Dashboard)
STRIPE_PUBLISHABLE_KEY_TEST=pk_test_your_test_publishable_key_here
STRIPE_SECRET_KEY_TEST=sk_test_your_test_secret_key_here
STRIPE_PUBLISHABLE_KEY_LIVE=pk_live_your_live_publishable_key_here
STRIPE_SECRET_KEY_LIVE=sk_live_your_live_secret_key_here

# AI API Keys
GEMINI_API_KEY=your_gemini_api_key_here
APIFY_API_KEY=your_apify_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Google OAuth Configuration (Get from Google Cloud Console)
# https://console.cloud.google.com/apis/credentials
GOOGLE_OAUTH2_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_OAUTH2_CLIENT_SECRET=your-client-secret

# Twitter Credentials
TWITTER_USERNAME=your_twitter_username
TWITTER_PASSWORD=your_twitter_password

# Email Configuration (Gmail App Password)
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-gmail-app-password
